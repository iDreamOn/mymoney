<% provide(:title, "Accounts") %>
<p id="notice"><%= notice %></p>

<h1>Listing Accounts</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Name</th>
      <th>Type</th>
      <th>Associated Payment Method</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody id="accounts">
    <%= render @accounts %>
  </tbody>
</table>

<br>

<%= link_to 'New Account', new_account_path, remote: true %>
<div id="account-modal" class="modal fade"></div>
