$("ul.errors").html("")
<% if @account.errors.any? %>
  <% @account.errors.full_messages.each do |message| %>
    $("ul.errors").append($("<li />").html("<%= message.html_safe %>"))
  <% end %>
<% else %>
  $("<%= escape_javascript(render @account) %>").appendTo("#accounts");
  $("#account-modal").modal("hide")
<% end %>
