$("ul.errors").html("")
<% if @spending.errors.any? %>
  <% @spending.errors.full_messages.each do |message| %>
    $("ul.errors").append($("<li />").html("<%= message.html_safe %>"))
  <% end %>
<% else %>
  <% if @spending.spending_date <= Date.today %>
    $("<%= escape_javascript(render 'spendings/partials/spending', spending: @spending) %>").prependTo("#spendings");
  <% else %>
    $("<%= escape_javascript(render 'spendings/partials/spending', spending: @spending) %>").prependTo("#future_spendings");
  <% end %>
  $("#spending-modal").modal("hide")
<% end %>
