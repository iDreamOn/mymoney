<%= form_for(@payment_method) do |f| %>
  <% if @payment_method.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@payment_method.errors.count, "error") %> prohibited this payment_method from being saved:</h2>

      <ul>
      <% @payment_method.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :user_id %><br>
    <%= f.number_field :user_id, readonly: true %>
  </div>
  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :method_type %><br>
    <%= f.select :method_type, ['Credit', 'Debit', 'Cash', 'Other'], prompt: 'Select One'  %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_field :description %>
  </div>
  <div class="field">
    <%= f.label :account_id %><br>
    <%= f.grouped_collection_select :account_id, @grouped_accounts, :items, :name, :id, :name, include_blank: 'None' %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
